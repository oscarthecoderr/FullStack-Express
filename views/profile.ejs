<!doctype html>
<html>
<head>
    <title>A LA ORDEN</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <!-- <link rel="stylesheet" href="style.css"> -->
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>
    </div> 
    <div class="row justify-content-around">
      
          <div class="foodContainer"> 

            <div class="menu">
              <% for(var i=0; i<menu.length; i++) {%>
                <div class="row-4">
                  <div class="card" style="width: 18rem;" id="<%=menu[i]._id%>">
                    <img class="card-img-top" src="<%=menu[i].src%>">
                    <div class="card-body">        
                      <h5 class="order card-title"><%= menu[i].food%></h5>
                      <h6 class="price card-subtitle mb-2 text-muted"><%= menu[i].cost%></h6>
                      <button class="order btn btn-outline-primary btn-lg">Select</button>
                    </div> 
                    
                  </div>
                </div>
              <% } %>
            </div>
          </div>
    
    

  
      <ul class="food">
        <% for(var i=0; i<orders.length; i++) {%>
          <li <%= orders[i].paid ?  'class=paid' : 'class= notPaid' %> id="<%=orders[i]._id%>">
            <span class="<%='appetizer'%>"><%= orders[i].food%></span>
            <span class="<%='entree'%>"><%= orders[i].cost%></span>
            <span class="<%='appetizer'%>"><%= orders[i].time%></span>
            <i class="fa-solid fa-money-bill pay"></i>
            <i class="fa fa-trash" aria-hidden="true"></i>
          </li>
        <% } %>
      </ul>
    </div>  
</div>


<script src="main.js"></script>
<script src="https://kit.fontawesome.com/41069aef2b.js" crossorigin="anonymous"></script>
</body>
</html>
